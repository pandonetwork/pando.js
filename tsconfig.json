{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@artifacts/*": ["./build/contracts*"],
      "@components/*": ["./src/components/*"],
      "@factories/*": ["./src/factories/*"],
      "@interfaces": ["./src/interfaces/ipando.d.ts"],
      "@objects/*": ["./src/objects/*"],
      "@pando": ["./src/pando/index.ts"],
      "@pando/*": ["./src/pando/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"]
    },
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "lib": ["es2017", "es2015"],
    "typeRoots": [
      "node_modules/@0xproject/typescript-typings/types",
      "node_modules/@types",
      "./src/ipando.d.ts"
    ]
  }
}
